// 表单验证
function formCheck() {
	var isCheck = true;
	if ($.trim($("#name").val()) == "") {
		$("#nameHelp").html("必须填写");
		$("#nameDiv").addClass("error");
		$("#name").focus();
		isCheck = false;
	} else {
		$("#nameHelp").html("");
		$("#nameDiv").removeClass("error");
	}
	return isCheck;
}
